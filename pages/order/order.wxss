/* pages/order/order.wxss */

.order-container {
  background: #fff;
}

page {
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  font-size: 15px;
}

.header {
  display: block;
  margin: 0 auto;
  background: #333;
  padding: 30rpx;
  color: #fff;
  line-height: 2.4;
}

.title {
  text-align: center;
  font-size: 20px;
}

.order {
  display: inline-block;
  width: 100%;
  height: auto;
}

.order-container {
  width: 100%;
  height: 60rpx;
  margin-top: 2px;
}

.inside-container {
  width: 88%;
  height: 100%;
  font-size: 15px;
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  float: right;
}

.order-name {
  width: 40%;
  float: left;
  padding-top: 5px;
}

.order-count {
  width: 30%;
  float: left;
  padding-top: 5px;
}

.order-price {
  float: left;
  padding-top: 5px;
}

.shop-name {
  font-weight: bold;
  font-size: 18px;
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  width: 100%;
  height: 50rpx;
  padding-left: 10px;
  padding-top: 10px;
}

.line {
  border-bottom: 1px dashed #000;
  width: 62%;
  height: 1px;
  margin-left: 3%;
  padding-right: 15%;
}

.line-cut {
  border-bottom: 1px dashed #000;
  width: 80%;
  height: 1px;
  margin-left: 3%;
  padding-right: 15%;
}

.total {
  width: 88%;
  float: right;
  height: 50rpx;
  font-size: 15px;
}

.pay-btn {
  height: 66rpx;
  float: right;
  margin-right: 20px;
  color: #fff;
  background-color: #09bb07;
  font-size: 15px;
  clear: both;
  text-align: center;
  border-radius: 8%;
  line-height: 36px;
}

.pay-container {
  width: 100%;
  display: inline-block;
  margin-bottom: 5px;
  margin-top: 10px;
}

.left-container {
  margin-left: 3%;
  float: left;
  width: 40%;
  line-height: 35px;
  font-size: 15px;
}

.right-container {
  float: left;
  margin-left: 85px;
}

.tip {
  display: inline-block;
  color: orangered;
  margin-left: 20px;
}